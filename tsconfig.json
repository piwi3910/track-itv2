{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@track-it/shared": ["packages/shared/src"],
      "@track-it/ui": ["packages/ui/src"],
      "@track-it/database": ["packages/database/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".turbo"]
}